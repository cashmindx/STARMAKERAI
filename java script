// ========== ðŸŽ¬ Generate Script ==========
function generateScript() {
  const genre = document.getElementById("genreSelect").value;
  const prompt = document.getElementById("promptInput").value;

  if (!prompt) {
    document.getElementById("scriptOutput").innerText = "Please enter a movie scene description.";
    return;
  }

  fetch("https://your-backend-url.com/api/generate-script", {  // âœ… Replace with your actual backend URL
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ genre, prompt })
  })
  .then(res => res.json())
  .then(data => {
    document.getElementById("scriptOutput").innerText = data.script || "No script received.";
  })
  .catch(err => {
    document.getElementById("scriptOutput").innerText = "âŒ Error generating script.";
    console.error(err);
  });
}

